<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!--填充色-->
            <solid
                android:color="#fff"/>

            <corners
                android:radius="5dp"
                />
            <!--边框-->
            <stroke
                android:width="1dp"
                android:color="#EFEFEF"/>
        </shape>
    </item>
</layer-list>